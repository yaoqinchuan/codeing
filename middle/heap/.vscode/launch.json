        "cwd": "${workspaceFolder}",
        
        "environment": [],
        
        "externalConsole": true,
        
        "MIMode": "gdb",
        
        "miDebuggerPath": "D:/mingw_tools/mingw_tools/MinGW/bin/gdb.exe",
        
        "setupCommands": [
        
        {
        
        "description": "Enable pretty-printing for gdb",
        
        "text": "-enable-pretty-printing",
        
        "ignoreFailures": false
        
        }
        
        ],
        
        "preLaunchTask": "build & debug file"
        
        }
        
